{
  "name": "Basis.js Tools",
  "version": "1.3.21",
  "description": "Basis.js Tools is a set of tools which helps developers to create applications on basis.js framework more easily.",
  "devtools_page": "devtools.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2,
  "permissions":  [
    "tabs",
    "contextMenus", 
    "http://*/*",
    "https://*/*"
  ],
  "background": { "scripts": ["background.js"] },
  "icons": {
    "32": "icon32x32.png",
    "128": "icon128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ]
}
